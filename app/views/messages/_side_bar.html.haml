.chat-side
  .side-header
    .side-header__bar
      %p.side-header__bar__username
        = current_user.name
      %ul.side-header__bar__menu
        %li.edit
          = link_to new_group_path do
            = icon('fa', 'edit', class: 'icon')
        %li.cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message